# Academia Frontend Environment Configuration
# Copy this file to .env and update the values

# API Configuration
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# Application Configuration
VITE_APP_NAME=Academia
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Educational Platform

# Environment
VITE_NODE_ENV=development
VITE_DEBUG=true

# External Services
VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_CHAT_FEATURES=true
VITE_ENABLE_LIVE_STREAMING=true
VITE_ENABLE_PAYMENT_PROCESSING=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_SMS_VERIFICATION=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_FONT=Ravi
VITE_ENABLE_DARK_MODE=true

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_NAME=Academia
VITE_PWA_SHORT_NAME=Academia
VITE_PWA_DESCRIPTION=Educational Platform
VITE_PWA_THEME_COLOR=#3b82f6
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_SOURCE_MAPS=true

# Security
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_URI=https://yourdomain.com/csp-report

# Performance
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_BUNDLE_ANALYZER=false

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,fa
VITE_RTL_SUPPORT=true

# Social Authentication (Optional)
VITE_GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Payment Gateway
VITE_ZARINPAL_MERCHANT_ID=your-merchant-id
VITE_ZARINPAL_SANDBOX=true

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image,video,audio,document,pdf

# Chat Configuration
VITE_CHAT_ENABLED=true
VITE_CHAT_MAX_MESSAGE_LENGTH=1000
VITE_CHAT_TYPING_TIMEOUT=3000

# Test Configuration
VITE_TEST_SESSION_TIMEOUT=3600
VITE_TEST_AUTO_SAVE_INTERVAL=30
VITE_TEST_DEVICE_FINGERPRINTING=true

# Course Configuration
VITE_COURSE_VIDEO_QUALITY=auto
VITE_COURSE_CHAT_ENABLED=true
VITE_COURSE_RECORDING_ENABLED=true

# Knowledge Tree Configuration
VITE_KNOWLEDGE_TREE_CACHE_TTL=3600
VITE_KNOWLEDGE_TREE_MAX_DEPTH=10
VITE_KNOWLEDGE_TREE_SEARCH_ENABLED=true

# E-commerce Configuration
VITE_SHOP_ENABLED=true
VITE_CART_SESSION_KEY=cart
VITE_CART_EXPIRY_DAYS=30
VITE_MAX_CART_ITEMS=100

# Notification Configuration
VITE_NOTIFICATIONS_ENABLED=true
VITE_NOTIFICATIONS_PUSH_ENABLED=true
VITE_NOTIFICATIONS_EMAIL_ENABLED=true
VITE_NOTIFICATIONS_SMS_ENABLED=true

# Analytics
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_TRACK_USER_BEHAVIOR=true
VITE_ANALYTICS_TRACK_PERFORMANCE=true

# Error Reporting
VITE_ERROR_REPORTING_ENABLED=true
VITE_ERROR_REPORTING_LEVEL=error
VITE_ERROR_REPORTING_SAMPLE_RATE=1.0

# Caching
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300
VITE_CACHE_MAX_SIZE=50

# Rate Limiting
VITE_RATE_LIMITING_ENABLED=true
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=60
VITE_RATE_LIMIT_BURST=100

# Security Headers
VITE_SECURITY_HEADERS_ENABLED=true
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true

# Development Server
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_HTTPS=false

# Build Configuration
VITE_BUILD_SOURCE_MAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_COMPRESS=true
VITE_BUILD_ANALYZE=false

# CDN Configuration
VITE_CDN_ENABLED=false
VITE_CDN_URL=https://cdn.yourdomain.com
VITE_CDN_STATIC_URL=https://static.yourdomain.com

# API Versioning
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# WebSocket Configuration
VITE_WS_ENABLED=true
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# File Storage
VITE_FILE_STORAGE_ENABLED=true
VITE_FILE_STORAGE_MAX_SIZE=10485760
VITE_FILE_STORAGE_ALLOWED_TYPES=image,video,audio,document,pdf

# User Interface
VITE_UI_THEME=default
VITE_UI_LANGUAGE=en
VITE_UI_RTL=false
VITE_UI_ANIMATIONS=true

# Accessibility
VITE_A11Y_ENABLED=true
VITE_A11Y_HIGH_CONTRAST=false
VITE_A11Y_SCREEN_READER_SUPPORT=true

# Mobile
VITE_MOBILE_OPTIMIZED=true
VITE_MOBILE_TOUCH_OPTIMIZED=true
VITE_MOBILE_GESTURE_SUPPORT=true

# Offline Support
VITE_OFFLINE_ENABLED=true
VITE_OFFLINE_CACHE_STRATEGY=networkFirst
VITE_OFFLINE_CACHE_SIZE=50

# Service Worker
VITE_SW_ENABLED=true
VITE_SW_UPDATE_CHECK_INTERVAL=60000
VITE_SW_SKIP_WAITING=true

# Performance
VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_BUDGET=1000
VITE_PERFORMANCE_LCP_THRESHOLD=2500

# SEO
VITE_SEO_ENABLED=true
VITE_SEO_META_TAGS=true
VITE_SEO_STRUCTURED_DATA=true
VITE_SEO_SITEMAP=true

# Social Media
VITE_SOCIAL_SHARING_ENABLED=true
VITE_SOCIAL_OG_TAGS=true
VITE_SOCIAL_TWITTER_CARDS=true

# Internationalization
VITE_I18N_ENABLED=true
VITE_I18N_FALLBACK_LANGUAGE=en
VITE_I18N_LOADING_STRATEGY=async

# Testing
VITE_TEST_ENABLED=true
VITE_TEST_MOCK_API=true
VITE_TEST_DEBUG_MODE=false

# Logging
VITE_LOGGING_ENABLED=true
VITE_LOGGING_LEVEL=info
VITE_LOGGING_CONSOLE=true
VITE_LOGGING_REMOTE=false
