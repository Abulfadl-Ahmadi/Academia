# Academia Platform Environment Configuration
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
# PostgreSQL (recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=academia_db
DB_USER=academia_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Alternative: MySQL
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=academia_db
# DB_USER=academia_user
# DB_PASSWORD=your-database-password
# DB_HOST=localhost
# DB_PORT=3306
# DB_OPTIONS={"charset": "utf8mb4"}

# Alternative: SQLite (development only)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Storage Configuration (S3-compatible)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_STORAGE_BUCKET_NAME=academia-media
AWS_S3_ENDPOINT_URL=https://your-s3-endpoint.com
AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com
AWS_S3_REGION_NAME=us-east-1
AWS_DEFAULT_ACL=None
AWS_S3_FILE_OVERWRITE=False
AWS_S3_VERIFY=True

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Academia Platform <noreply@yourdomain.com>

# SMS Configuration
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms.ir/v1/send/verify
SMS_SENDER_NUMBER=your-sender-number

# Payment Gateway (Zarinpal)
ZARINPAL_MERCHANT_ID=your-merchant-id
ZARINPAL_SANDBOX=False
ZARINPAL_CALLBACK_URL=https://yourdomain.com/payment/callback/
ZARINPAL_VERIFY_URL=https://api.zarinpal.com/pg/v4/payment/verify.json

# AI Integration (Google Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key
AI_MODEL=gemini-pro
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_COOKIES=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Development Settings
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/academia/django.log

# Cache Configuration
CACHE_BACKEND=redis
CACHE_LOCATION=redis://localhost:6379/1
CACHE_TIMEOUT=300

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# WebSocket Configuration
CHANNEL_LAYERS_BACKEND=channels_redis.core.RedisChannelLayer
CHANNEL_LAYERS_CONFIG={"hosts": [("localhost", 6379)]}

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image,video,audio,document,pdf
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB

# Test Settings
TEST_DATABASE_URL=sqlite:///test_db.sqlite3
TEST_REDIS_URL=redis://localhost:6379/15

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
MIXPANEL_TOKEN=your-mixpanel-token

# Social Authentication (Optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Static Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/academia/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/academia/media/

# Session Configuration
SESSION_COOKIE_AGE=1209600  # 2 weeks
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_SAVE_EVERY_REQUEST=False
SESSION_EXPIRE_AT_BROWSER_CLOSE=False

# CSRF Configuration
CSRF_COOKIE_AGE=31449600  # 1 year
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# API Configuration
API_VERSION=v1
API_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_CHAT_FEATURES=True
ENABLE_LIVE_STREAMING=True
ENABLE_PAYMENT_PROCESSING=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_SMS_VERIFICATION=True

# Development Tools
DJANGO_EXTENSIONS=True
DEBUG_TOOLBAR=True
SHELL_PLUS=True
